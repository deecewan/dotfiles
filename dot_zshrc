function git-hub-clone() {
  TO_CLONE=""
  if [ $# -eq 1 ]; then
    TO_CLONE="$1"
  else
    TO_CLONE="$1/$2"
  fi

  git clone git@github.com:$TO_CLONE.git $HOME/projects/$TO_CLONE;
}

